{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "shared/*"
            ],
            "@client/*": [
                "client/src/*"
            ],
            "@/*": [
                "client/src/*"
            ]
        }
    },
    "include": [
        "client/**/*.ts",
        "client/**/*.tsx",
        "server/**/*.ts",
        "shared/**/*.ts"
    ]
}